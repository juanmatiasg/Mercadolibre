<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardViewCarrito"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20dp"
    app:cardCornerRadius="7dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">


        <ImageView
            android:id="@+id/imageViewCarrito"
            android:layout_width="73dp"
            android:layout_height="73dp"
            android:onClick="clickCategories"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_launcher_background" />

        <TextView
            android:id="@+id/textViewIdCarrito"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginLeft="12dp"
            android:text="ID"
            android:textColor="#000000"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageViewCarrito"
            app:layout_constraintTop_toTopOf="@+id/imageViewCarrito" />

        <TextView
            android:id="@+id/textViewTitleCarrito"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="8dp"
            android:text="Titulo"
            android:textColor="#000000"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageViewCarrito"
            app:layout_constraintTop_toBottomOf="@+id/textViewIdCarrito" />

        <TextView
            android:id="@+id/textViewPrecioCarrito"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="8dp"
            android:text="Precio"
            android:textColor="#000000"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageViewCarrito"
            app:layout_constraintTop_toBottomOf="@+id/textViewTitleCarrito" />

        <Button
            android:id="@+id/buttonEliminar"
            android:layout_width="36dp"
            android:layout_height="26dp"
            android:layout_marginTop="20dp"
            android:background="#FFFFFF"
            android:drawableBottom="@drawable/ic_delete_forever_black_24dp"
            app:layout_constraintEnd_toEndOf="@+id/textViewPrecioCarrito"
            app:layout_constraintTop_toBottomOf="@+id/textViewPrecioCarrito" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>